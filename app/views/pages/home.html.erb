<div class="banner">
  <div id="banner-search-bar">
    <%= form_tag pharmacies_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        id: "address-input",
        placeholder: "Type your location here...."
      %>
      <%= submit_tag "Go", class: "search-button" %>
    <% end %>
  </div>
</div>
