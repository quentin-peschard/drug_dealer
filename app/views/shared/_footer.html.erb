<div class="footer-wrapper">
  <div class="footer">
    <%= link_to root_path, class: "footer-btn" do %>
      <%= image_tag "home.png" %>
    <% end %>
    <%= link_to pharmacies_path, class: "footer-btn" do %>
      <%= image_tag "map.png" %>
    <% end %>
    <% if @lastorder %>
      <% if @lastorder.status == 'initialized' || @lastorder.status == 'pending' || @lastorder.status == 'ready' %>
        <%= link_to order_path(@lastorder), class: "footer-btn" do %>
          <div class="cart"><%= image_tag "shopping-cart.png" %></div>
          <% if @order %>
            <% if @ordered_drugs && @ordered_drugs.count > 0 %>
              <div class="total"> <%= @ordered_drugs.count %> </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <% else %>
        <%= link_to root_path, class: "footer-btn" do %>
          <%= image_tag "shopping-cart.png" %>
        <% end %>
    <% end %>
    <%= link_to orders_path, class: "footer-btn" do %>
      <%= image_tag "dashboard.png" %>
    <% end %>
  </div>
</div>
