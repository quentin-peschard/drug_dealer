<div class="view">
  <div class="pharmacy-show-top">
    <%= link_to "< Back to the list", pharmacies_path, class:"button-pharma-index"%>
  </div>
  <div class="pharmacy-show">
    <h1><%= @pharmacy.name %></h1>
    <p><%= @pharmacy.address %></p>
  </div>
  <div class="pharmacy-show-card">
      <div id="map"
                class="my-4"
                style="width: 100%; height: 350px; border-radius: 20px;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
  <%= link_to "Purchase medicine", drugs_path(pharmacy_id: @pharmacy.id), class:"button-meds-index" %>
</div>
