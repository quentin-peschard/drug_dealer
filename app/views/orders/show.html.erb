<% if !current_user.admin? && @order.status == 'initialized' %>
  <%= render 'orders/user-initialize', order: @order, ordered_drugs: @ordered_drugs %>
<% elsif !current_user.admin? && @order.status == 'pending' %>
  <%= render 'orders/user-pending' %>
<% elsif !current_user.admin? && @order.status == 'ready' %>
  <%= render 'orders/user-ready' %>
<% elsif !current_user.admin? && @order.status == 'complete' %>
  <%= render 'orders/user-complete' %>
<% elsif current_user.admin? && @order.status == 'pending' %>
  <%= render 'orders/pharm-pending' %>
<% end %>
