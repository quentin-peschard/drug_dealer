<div class="overlay hidden"></div>
<div class="container">
  <div class="view" data-controller="refresh-list">
    <div class="pharma-header">
      <h2><%= @pharmacy.name%></h2>
      <p><%= @pharmacy.address%></p>
      <%= form_tag drugs_path, method: :get, class: "drug-index-search", data: { refresh_list_target: 'form' } do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control searchadrug",
          placeholder: "Search a drug",
          data: {
            refresh_list_target: 'searchInput',
            action: "keyup->refresh-list#update"
          } %>
        <%= hidden_field_tag :pharmacy_id, @pharmacy.id.to_s %>
        <%= submit_tag "", class: "drug-search-bard-button" %>
      <% end %>
    </div>
    <%= render 'drugs/list' %>
  </div>
</div>
