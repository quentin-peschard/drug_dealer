<div class="container">
  <div class="view" data-controller="list">
    <div class="pharma-header">
      <h2><%= @pharmacy.name%></h2>
      <p><%= @pharmacy.address%></p>
      <%= form_tag drugs_path, method: :get, class: "drug-index-search" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control searchadrug",
          placeholder: "Enter a drug's name"
        %>
        <%= hidden_field_tag :pharmacy_id, @pharmacy.id.to_s %>
        <%= submit_tag "â˜Œ", class: "drug-search-bard-button" %>
      <% end %>
    </div>

    <% @drugs.each do |drug| %>
      <div class="card-product-drug">
        <% if drug.pic.attached?%>
          <%=cl_image_tag drug.pic.key%>
        <%else%>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <%end%>
        <div class="card-product-drug-infos">
          <h2><%= drug.formated_name %></h2>
          <p><%= "+#{drug.age} years" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
